<%- include('partials/navbar') %>

<div class="container">
    <div class="card" id="form-ask">
        <div class="card-header">
            <h3>Realizar pergunta</h3>
        </div>
        <div class="card-body">
            <form method="POST" action="/savequestion">
                <label for="title">Título:</label>
                <input type="text" placeholder="Título" class="form-control" name="title"/>
                <br/><label for="description">Descrição:</label>
                <textarea placeholder="Descreva a sua pergunta aqui" class="form-control" name="description"></textarea>
                <br/>
                <button type="submit" class="btn btn-success">Perguntar</button>
            </form>
        </div>
    </div>
</div>


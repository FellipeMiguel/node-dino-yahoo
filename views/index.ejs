<%- include('partials/header') %>

<%- include('partials/navbar') %>
<div class="container">
    <hr />
    <h1>Perguntas</h1>
    <a href="/ask" class="btn btn-success">Perguntar</a>
    <hr />
    <% questions.forEach(question => {%>
        <br />
        <div class="card">
            <div class="card-body">
                <h3><%= question.title %></h3>
            </div>
            <div class="card-footer">
                <a href="/question/<%= question.id %>" class="btn btn-success">Responder</a>
            </div>
        </div>
    <%})%>
</div>

<%- include('partials/footer') %>